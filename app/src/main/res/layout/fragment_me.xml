<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@mipmap/iv_me_top_bg" />

        <ImageView
            android:id="@+id/iv_me_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_me_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_me_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="Marry"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_me_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_me_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/bg_me_loginout"
            android:paddingLeft="25dp"
            android:paddingTop="4dp"
            android:paddingRight="25dp"
            android:paddingBottom="4dp"
            android:text="注销"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:layout_marginTop="-20dp"
        android:background="@drawable/bg_me_bottom"
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:orientation="vertical"
        android:paddingRight="15dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/rl_me_person_info"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingRight="35dp"
                android:paddingLeft="35dp"
                android:paddingBottom="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_me_item"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/iv_me_person" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#040404"
                    android:text="个人信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rl_me_collection"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingRight="35dp"
                android:paddingLeft="35dp"
                android:paddingBottom="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_me_item"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/iv_me_collect" />
                <TextView

                    android:layout_marginTop="5dp"
                    android:textColor="#040404"
                    android:text="爱心记录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>